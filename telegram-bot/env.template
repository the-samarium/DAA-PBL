# Telegram Bot Configuration
# Copy this file to .env and fill in your actual values

TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Supabase Configuration
# Option 1: Use bot-specific variables
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Option 2: Reuse Next.js variables (if using same Supabase project)
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key (recommended for bot)

# Bot Server Configuration
BOT_PORT=3001
NODE_ENV=development

# Website URL (for redirects in /book and /mybookings)
WEBSITE_BASE_URL=http://localhost:3000

# Optional: API Keys
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret

